<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueFirst">


    <View
        android:id="@+id/loginview"
        android:layout_width="154dp"
        android:layout_height="164dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/oval_daire2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/loginview2"
        android:layout_width="154dp"
        android:layout_height="164dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/oval_daire3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/oval_container"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/background_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textNameLogin"
        android:layout_width="218dp"
        android:layout_height="31dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_radius"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textViewPasswordLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameLogin" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="218dp"
        android:layout_height="0dp"

        android:layout_marginBottom="300dp"
        android:backgroundTint="#f3b06a"
        android:hapticFeedbackEnabled="false"
        android:text="Login"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordLogin" />

    <TextView
        android:id="@+id/textViewPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        app:layout_constraintBottom_toTopOf="@+id/textPasswordLogin"
        app:layout_constraintEnd_toEndOf="@+id/textPasswordLogin"
        app:layout_constraintStart_toStartOf="@+id/textPasswordLogin"
        app:layout_constraintTop_toBottomOf="@+id/textNameLogin" />

    <TextView
        android:id="@+id/textViewNameLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="253dp"
        android:text="NAME"
        app:layout_constraintBottom_toTopOf="@+id/textNameLogin"
        app:layout_constraintEnd_toEndOf="@+id/textNameLogin"
        app:layout_constraintStart_toStartOf="@+id/textNameLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textPasswordLogin"
        android:layout_width="218dp"
        android:layout_height="31dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_radius"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPasswordLogin" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup!"
        app:layout_constraintBottom_toBottomOf="@+id/oval_container"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />




</androidx.constraintlayout.widget.ConstraintLayout>