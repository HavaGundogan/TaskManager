<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDBDB">


    <View
        android:id="@+id/loginview"
        android:layout_width="128dp"
        android:layout_height="124dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/oval_daire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/loginview2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/oval_daire3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/oval_container"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/background_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="225dp"
        android:layout_height="43dp"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="400dp"
        android:backgroundTint="#feb06a"
        android:hapticFeedbackEnabled="false"
        android:onClick="resetButtonOnclick"
        android:text="RESET PASSWORD"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmailReset"
        app:layout_constraintVertical_bias="0.246" />

    <EditText
        android:id="@+id/textEmailReset"
        android:layout_width="218dp"
        android:layout_height="31dp"
        android:background="@drawable/edittext_radius"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameReset" />

    <TextView
        android:id="@+id/textViewNameReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="175dp"
        android:text="E-MAÄ°L"
        app:layout_constraintBottom_toTopOf="@+id/textEmailReset"
        app:layout_constraintEnd_toEndOf="@+id/textEmailReset"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textEmailReset"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>